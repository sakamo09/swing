<%= form_with model: item, local: true do |f|%>
  <div class="field">
    <%= f.label :genre_id, "ジャンル" %><br />
     <%= f.text_field :genre_id, id:"item_genre" %>
  </div>

  <div class="field">
    <%= f.label :maker_id, "メーカー" %><br />
    <%= f.text_area :maker_id, class: :form__text, id:"item_maker" %>
  </div>

  <div class="field">
    <%= f.label :price, "価格" %><br />
      <%= f.text_area :price, class: :form__text, id:"item_price" %>
  </div>

 <div class="field">
    <%= f.label :merit, "おすすめポイント" %><br />
      <%= f.text_area :merit, class: :form__text, id:"item_merit" %>
  </div>

  <div class="field">
    <%= f.label :image, "商品の画像" %><br />
     <%= f.file_field :image, id:"item_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>